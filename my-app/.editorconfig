[*]
charset = utf-8
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[{.babelrc, .stylelintrc, jest.config, .eslintrc, .prettierrc, MOCKED_DATA, *.json, *.jsb3, *.jsb2, *.bowerrc}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[{*.es6, *.mjs}]
indent_style = space
indent_size = 2

[{tsconfig.app.json, tsconfig.e2e.json, tsconfig.json, tsconfig.spec.json}]
indent_style = space
indent_size = 2

[*.js.map]
indent_style = space
indent_size = 2

[{.analysis_options, *.yml, *.yaml}]
indent_style = space
indent_size = 2

